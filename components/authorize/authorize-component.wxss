.loading-wrap {
  position: fixed;
  left: 0;
  top: 0;
  bottom: 0;
  right: 0;
  width: 100vw;
  height: 100vh;
  z-index: 9999;
  visibility: hidden;
  opacity: 0;
  transition: all 0.3s;
}

.loading-wrap.show {
  visibility: visible;
  opacity: 1;
  transform: scale(1);
}

.loading-wrap .loading-bg {
  position: fixed;
  left: 0;
  top: 0;
  bottom: 0;
  right: 0;
  width: 100%;
  height: 100%;
  z-index: 9;
  background-color: white;
  visibility: hidden;
  opacity: 0;
  transition: all 0.3s;
}

.loading-wrap .loading-bg.show {
  visibility: visible;
  opacity: 1;
  transform: scale(1);
}

.loading-wrap .loading-content {
  position: absolute;
  left: 0;
  top: 0;
  width: 100vw;
  height: 100vh;
  text-align: center;
  transform: scale(0.4);
  z-index: 19;
  overflow: auto;
  visibility: hidden;
  opacity: 0;
  transition: all 0.3s;
  background-color: white;
}

.loading-wrap .loading-content.show {
  visibility: visible;
  opacity: 1;
  transform: scale(1);
}

.loading-wrap .loading-content .page-wrap {
  position: relative;
  padding-top: 130rpx;
  z-index: 6;
}

.loading-wrap .loading-content .page-wrap .auth-wrap {
  position: relative;
  width: 702rpx;
  height: 770rpx;
  margin: 0 auto;
  background-color: #fff;
  box-shadow: 0rpx 8rpx 36rpx 0rpx rgba(0, 0, 0, 0.3);
  border-radius: 20rpx;
}

.loading-wrap .loading-content .page-wrap .auth-wrap .top-logo {
  position: absolute;
  top: -107rpx;
  left: 50%;
  width: 180rpx;
  height: 180rpx;
  font-size: 0;
  transform: translate3d(-50%, 0, 0);
  box-shadow: 0px 10px 16px 0px rgba(0, 0, 0, 0.12);
  border-radius: 50%;
  overflow: hidden;
}

.loading-wrap .loading-content .page-wrap .auth-wrap .top-logo .logo {
  width: 100%;
  height: 100%;
}

.loading-wrap .loading-content .page-wrap .auth-wrap .content-wrap {
  padding: 176rpx 24rpx 26rpx 24rpx;
  text-align: center;
}

.loading-wrap .loading-content .page-wrap .auth-wrap .content-wrap .dl {
  margin-top: 96rpx;
  padding-left: 108rpx;
  text-align: left;
}

.loading-wrap .loading-content .page-wrap .auth-wrap .content-wrap .dl .dt {
  margin-bottom: 20rpx;
  font-size: 34rpx;
  color: #198b82;
}

.loading-wrap .loading-content .page-wrap .auth-wrap .content-wrap .dl .dd {
  margin-bottom: 20rpx;
  font-size: 26rpx;
  color: #808080;
}

.loading-wrap .loading-content .page-wrap .auth-wrap .content-wrap .dl .dd:last-child {
  margin-bottom: 0;
}

.loading-wrap .loading-content .page-wrap .auth-wrap .content-wrap .button-wrap .button {
  width: 600rpx;
  height: 80rpx;
  margin: 0 auto;
  margin-top: 60rpx;
  padding: 0;
  font-size: 30rpx;
  line-height: 80rpx;
  text-align: center;
  background-image: linear-gradient(90deg, #455063 0%, #2a313d 100%), linear-gradient(#198b82, #198b82);
  background-blend-mode: normal, normal;
  border-radius: 40rpx;
  color: #ffffff;
}

.loading-wrap .loading-content .page-wrap .auth-wrap .content-wrap .button-wrap .button::before, .loading-wrap .loading-content .page-wrap .auth-wrap .content-wrap .button-wrap .button::after {
  border: none;
}

.loading-wrap .loading-content .page-bg {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  z-index: 1;
}

.loading-wrap .loading-content .page-bg .color-bg {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  background-color: #2a313d;
}
